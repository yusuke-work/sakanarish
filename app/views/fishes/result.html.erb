<canvas id="myChart" width="100" height="100" data-labels="<%= @data_keys %>" data-data="<%= @data_values %>" data-label="<%= @fish_name %>" ></canvas>
<%# binding.pry %>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
  type: 'radar',
  data: {
    labels: JSON.parse(ctx.canvas.dataset.labels),
    datasets: [
      {
      label: JSON.parse(ctx.canvas.dataset.label),
      backgroundColor: "rgba(0,0,80,0.4)",
      borderColor: "rgba(0,0,80,1)",
      data: JSON.parse(ctx.canvas.dataset.data)
      }
    ]
  },
  options: {
    scale: {
        ticks: {
            suggestedMin: 0,
            suggestedMax: 100
        }
    }
  }
});
</script>
