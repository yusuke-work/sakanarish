<div id="home" class="big-bg">  
  <header class="page-header wrapper">

    <%= link_to root_path, class: 'logo' do %>
      <%= image_tag Fish.find(15).image_url %>
      <%= image_tag 'logo.jpg' %>
    <% end %>


    <%# <h1><a href="index.html"><img src="logo.jpg" class="logo" alt="WCBカフェホーム"></a></h1>
    <nav> %>
      <ul class="main-nav">
        <% if current_user %>
          <li><%= current_user.name %></li>
        <% end %>
        <li><%= link_to '新規登録', new_user_path %></li>
        <li><%= link_to 'ログイン', login_path %></li>
        <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
      </ul>
    </nav>
  </header>

  <div class="home-content wrapper">
    <h2 class="page-title">簡単な診断であなたにぴったりのおさかなとレシピを提案します<h2>
    <%# <p>おしゃれなカフェで癒やされてみませんか?無添加の食材で体の中からリフレッシュ｡</p> %>


  </div><!-- /.home-content -->
</div><!-- /#home -->

  <!-- ボタンを押す時に未ログインもしくはゲストユーザー(!current_user||current_user.guest?)ならゲストログインさせる -->
  <!-- ボタンを押す時に本アカでログイン済みならそのまま診断ページへ -->
  <% if !current_user||current_user.guest? %>
    <%= link_to '診断する(ゲストログインする)', guest_login_path, method: :post, class: 'button' %>
  <% else %>
    <%= link_to '診断する(ゲストログインしない)', new_question_evaluation_path, class: 'button' %>
  <% end %>

<footer>
  <div class="wrapper">
