<%= form_with model: @form, url: question_evaluations_path, method: :post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.fields_for :question_evaluations do |i| %>
    <%= i.radio_button :evaluation, 5 %>
    <%= i.label :evaluation_5, "とてもあてはまる", {style: "display: inline-block;"} %>
    <%= i.radio_button :evaluation, 4 %>
    <%= i.label :evaluation_4, "すこしあてはまる", {tyle: "display: inline-block;"} %>
    <%= i.radio_button :evaluation, 3, checked: true %>
    <%= i.label :evaluation_3, "どちらでもない", {style: "display: inline-block;"} %>
    <%= i.radio_button :evaluation, 2 %>
    <%= i.label :evaluation_2, "あまりあてはまらない", {style: "display: inline-block;"} %>
    <%= i.radio_button :evaluation, 1 %>
    <%= i.label :evaluation_1, "まったくあてはまらない", {style: "display: inline-block;"} %>
  <% end %>
  <%= f.submit  %>
<% end %>

<%= link_to 'トップへ戻る', root_path%>
